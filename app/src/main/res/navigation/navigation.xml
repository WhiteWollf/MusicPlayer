<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_library">

    <fragment
        android:id="@+id/navigation_library"
        android:name="com.example.musicplayer.SongLibrary.SongFragment"
        android:label="Library"
        tools:layout="@layout/fragment_song_list">
        <action
            android:id="@+id/action_songFragment_to_playingFragment"
            app:destination="@id/navigation_playing" />
    </fragment>

    <fragment
        android:id="@+id/navigation_playing"
        android:name="com.example.musicplayer.PlayingFragment"
        android:label="Playing"
        tools:layout="@layout/fragment_playing" >
        <action
            android:id="@+id/action_navigation_playing_to_navigation_library"
            app:destination="@id/navigation_library" />
    </fragment>

</navigation>